

generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Bank {
  Idbank          Int              @id @default(autoincrement())
  NameBank        String
  Agence          String
  Adress          String
  RIB             String
  BankOperations  BankOperation[]  // one-to-many relation
   @@map("bank")
}

model BankOperation {
  IdOperation        Int      @id @default(autoincrement())
  bank               String
  DateOperation      DateTime
  Description        String
  PaymentReference   String
  Note               String
  TypeOperation      String
  OperationReference String
  Amount             Float

  // Foreign key to Bank
  bankId             Int
  Bank               Bank     @relation(fields: [bankId], references: [Idbank])
}


